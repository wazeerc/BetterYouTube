{
  "manifest_version": 3,
  "name": "Better Scroll for YouTube",
  "version": "1.0",
  "description": "Replace infinite scroll(s) on YouTube with tidy scrollable containers.",
  "icons": {
    "128": "icon.png"
  },
  "permissions": [
    "scripting"
  ],
  "host_permissions": [
    "https://www.youtube.com/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://www.youtube.com/*"
      ],
      "js": [
        "content.js"
      ]
    }
  ]
}